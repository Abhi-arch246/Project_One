<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".DeveloperActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/devtool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colortertiaryDark"
        android:elevation="4dp"
        app:title="Developer's Portfolio"
        app:titleTextColor="#fff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/devtool"
        android:background="#5000ca">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/developer" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    app:cardElevation="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/roboto_black_italic"
                        android:text="Hey there!! I'm Abhishek.P"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    app:cardElevation="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp">

                        <ImageView
                            android:id="@+id/mimg1"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/pencil" />

                        <TextView
                            android:id="@+id/mtv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/mimg1"
                            android:fontFamily="@font/roboto_black_italic"
                            android:text="Designer ;"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/mimg2"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/mtv1"
                            android:layout_marginLeft="180dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/webpro" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mimg1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/mimg2"
                            android:fontFamily="@font/roboto_black_italic"
                            android:text="Developer ;"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    app:cardElevation="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/roboto_black_italic"
                        android:text="@string/about_me"
                       android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/insta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    app:cardElevation="20dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/instagram" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/roboto_black_italic"
                            android:text="Contact me on instagram"
                            android:gravity="center_horizontal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:textColor="#D8ffffff"
                    android:textSize="25sp"
                    android:fontFamily="@font/roboto_black_italic"
                    android:text="@string/qdesc"
                    android:gravity="center_horizontal"/>



            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</RelativeLayout>